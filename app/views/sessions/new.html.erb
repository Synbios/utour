<div class="container">

  <div class="session_login_window well">
    <h2>请先登录</h2>

    <% if @user.present? && @user.errors.any? %>
    <div class="form_errors">
      <h2>errors:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <%= form_for :session, url: sessions_path, :html => {:role => "form", :class => "form-horizontal"} do |f| %>

    <div class="form-group">
      <%= f.text_field :identification_id, :placeholder => "邮箱/微信号/手机号", :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, :class => "form-control", :placeholder => "请输入密码" %>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-4">
        <%= f.submit "登录", :class => "btn btn-default full_button" %>
      </div>
    </div>

    <% end %>
  </div>
</div>

