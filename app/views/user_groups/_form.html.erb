<%= form_for :user_group, url: user_groups_path, :html => {:role => "form", :class => "form-horizontal"} do |f| %>

<div class="form-group">

  <% if @user_group.present? && @user_group.errors[:name] %>
  <div class="col-sm-offset-3 col-sm-9">
    <% @user_group.errors[:name].each do |msg| %>
    <%= render inline: "<span class=\"inline_error_message\">#{msg}</span><br/>" %>
    <% end %>
  </div>
  <% end %>
  
  <%= f.label :name, '用户组名', :class => "col-sm-3 control-label" %>
  <div class="col-sm-9">
    <%= f.text_field :name, :placeholder => "请勿重复", :class => "form-control" %>
  </div>
</div>

<div class="form-group">
  
  <% if @user_group.present? && @user_group.errors[:parent_id] %>
  <div class="col-sm-offset-3 col-sm-9">
    <% @user_group.errors[:parent_id].each do |msg| %>
    <%= render inline: "<span class=\"inline_error_message\">#{msg}</span><br/>" %>
    <% end %>
  </div>
  <% end %>
  
  <%= f.label :parent_id, '上级用户组ID', :class => "col-sm-3 control-label" %>
  <div class="col-sm-9">
    <%= f.text_field :parent_id, :placeholder => "添加根用户组请填0", :class => "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-3 col-sm-9">
    <%= f.submit "添加", :class => "btn btn-success full_width" %>
  </div>
</div>

<% end %>
