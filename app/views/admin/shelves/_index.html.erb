<div class="jarviswidget jarviswidget-color-blue" id="wid-shelves" data-widget-editbutton="false">

  <header>
    <span class="widget-icon"> <i class="fa fa-sitemap"></i> </span>
    <h2>线路列表</h2>

  </header>


  <div><!-- widget div-->


    <div class="jarviswidget-editbox"><!-- widget edit box --><!-- This area used as dropdown edit box -->


    </div><!-- end widget edit box -->


    <div class="widget-body"><!-- widget content -->
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>编号</th>
            <th>名称</th>
            <th>结构</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% shelves.each do |shelf| %>
          <tr>
            <td><%= shelf.id %></td>
            <td><%= shelf.name %></td>
            <td><%= shelf.rack %></td>
            <td><a href="/admin#admin/edit_shelf.html?id=<%= shelf.id %>">修改</a> <%= link_to "删除", admin_shelf_path(shelf), :method => :delete %></td>
          </tr>
          <% end %>
        </tbody>
      </table>


    </div><!-- end widget content -->


  </div><!-- end widget div -->


</div>