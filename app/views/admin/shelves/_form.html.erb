<div class="jarviswidget jarviswidget-color-blue" id="new_tour_form" data-widget-editbutton="false">

  <header>
    <span class="widget-icon"> <i class="fa fa-sitemap"></i> </span>
    <h2>新建/修改货架</h2>

  </header>


  <div><!-- widget div-->


    <div class="jarviswidget-editbox"><!-- widget edit box --><!-- This area used as dropdown edit box -->


    </div><!-- end widget edit box -->


    <div class="widget-body"><!-- widget content -->
      <%= form_for [:admin, @shelf], :html => {:role => "form", :id => 'xform', :class => "smart-form"} do |f| %>
      <fieldset>

        <section>
          <div class="row">
            <%= f.label :name, '货架名称', :class => "label col col-2" %>
            <div class="col col-10">
              <label class="input">
                <%= f.text_field :name %>
              </label>
            </div>
          </div>
        </section>

      </fieldset>

      <fieldset>
        <div class="row">
            <%= f.label :rack, '货架结构', :class => "label col col-2" %>
            <div class="col col-10">
              <label class="textarea">
                <%= f.text_area :rack, :placeholder => "请用json格式定义货架结构, 例子 { images: [\"pic_1.jpg\", \"pic_2.jpg\", \"pic_3.jpg\"] }", :rows => 20 %>
              </label>
            </div>
          </div>
      </fieldset>

      <footer>
        <%= f.submit "提交", :class => "btn btn-primary" %>
      </footer>
      <% end %>
    </div><!-- end widget content -->


  </div><!-- end widget div -->


</div>