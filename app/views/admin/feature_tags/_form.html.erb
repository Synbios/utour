<div class="jarviswidget jarviswidget-color-blue" id="new_feature_tag_form" data-widget-editbutton="false">

  <header>
    <span class="widget-icon"> <i class="fa fa-sitemap"></i> </span>
    <h2>新建标签</h2>

  </header>


  <div><!-- widget div-->


    <div class="jarviswidget-editbox"><!-- widget edit box --><!-- This area used as dropdown edit box -->


    </div><!-- end widget edit box -->


    <div class="widget-body"><!-- widget content -->
      <%= form_for [:admin, feature_tag], :html => {:role => "form", :id => 'xform', :class => "smart-form"} do |f| %>
      <fieldset>

        <section>
          <div class="row">
            <%= f.label :name, '新标签', :class => "label col col-2" %>
            <div class="col col-10">
              <label class="input">
                <%= f.text_field :name %>
              </label>
            </div>
          </div>
        </section>

      </fieldset>


      <footer>
        <%= f.submit "提交", :class => "btn btn-primary" %>
      </footer>
      <% end %>
    </div><!-- end widget content -->


  </div><!-- end widget div -->


</div>
