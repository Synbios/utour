<div class="jarviswidget jarviswidget-color-blue" id="wid-tags" data-widget-editbutton="false">

  <header>
    <span class="widget-icon"> <i class="fa fa-sitemap"></i> </span>
    <h2>标签列表</h2>

  </header>


  <div><!-- widget div-->


    <div class="jarviswidget-editbox"><!-- widget edit box --><!-- This area used as dropdown edit box -->


    </div><!-- end widget edit box -->


    <div class="widget-body"><!-- widget content -->
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>编号</th>
            <th>名称</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% feature_tags.each do |feature_tag| %>
          <tr>
            <td><%= feature_tag.id %></td>
            <td><%= feature_tag.name %></td>
            <td><%= link_to "删除", admin_feature_tag_path(feature_tag), :method => :delete %></td>
          </tr>
          <% end %>
        </tbody>
      </table>


    </div><!-- end widget content -->


  </div><!-- end widget div -->


</div>