<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>编号</th>
      <th>名称</th>
      <th>简介</th>
      <th>图片预览</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% images.each do |image| %>
    <tr>
      <td><%= image.id %></td>
      <td><%= image.name %></td>
      <td><%= image.description %></td>
      <td><%= image_tag image.photo.url(:thumb) %></td>
      <td>
        <%= link_to "删除", admin_image_path(image), method: :delete, class: "btn btn-primary" %>

      </td>
    </tr>
    <% end %>
  </tbody>
</table>