<div class="jarviswidget jarviswidget-color-blue" id="wid-user_group_tree" data-widget-editbutton="false">

  <header>
    <span class="widget-icon"> <i class="fa fa-sitemap"></i> </span>
    <h2>权限标签图</h2>

  </header>


  <div><!-- widget div-->


    <div class="jarviswidget-editbox"><!-- widget edit box --><!-- This area used as dropdown edit box -->


    </div><!-- end widget edit box -->


    <div class="widget-body"><!-- widget content -->
      <% if tree.nil? %>
        无用户组
      <% else %>
      <div class="tree">
        <%#= UserGroup.to_admin_list(:root).html_safe %>
        <% user_group_id = current_user.admin? ? 0 : current_user.user_group_id %>
        <%= UserGroup.to_admin_list(user_group_id).html_safe %>
      </div>
      <% end %>
    </div><!-- end widget content -->


  </div><!-- end widget div -->


</div>

