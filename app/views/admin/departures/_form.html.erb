<div class="jarviswidget jarviswidget-color-blue" id="new_date_and_price_form" data-widget-editbutton="false">

  <header>
    <span class="widget-icon"> <i class="fa fa-sitemap"></i> </span>
    <h2>添加团期</h2>

  </header>


  <div><!-- widget div-->


    <div class="jarviswidget-editbox"><!-- widget edit box --><!-- This area used as dropdown edit box -->


    </div><!-- end widget edit box -->


    <div class="widget-body"><!-- widget content -->
      <%= form_for [:admin, @departure], :html => {:role => "form", :id => 'xform', :class => "smart-form"} do |f| %>
      <fieldset>

        <section>
          <div class="row">
            <%= f.label :tour_id, '团队编号', :class => "label col col-2" %>
            <div class="col col-10">
              <label class="input"></i>
                <%= f.text_field :tour_id, value: tour.id, readonly: true %>
              </label>
              <h4 style="margin-top: 5px">名称: <%= tour.name %></h4>
            </div>
          </div>
        </section>

        <section>
          <div class="row">
            <%= f.label :date, '出发日期', :class => "label col col-2" %>
            <div class="col col-10">
              <label class="input"><i class="icon-append fa fa-calendar"></i>
                <%= f.date_field :date, placeholder: "例如 2014-01-01" %>
              </label>
            </div>
          </div>
        </section>

        <section>
          <div class="row">
            <%= f.label :number_of_seats, '座位数', :class => "label col col-2" %>
            <div class="col col-10">
              <label class="input">
                <%= f.number_field :number_of_seats, placeholder: "额定收客人数" %>
              </label>
            </div>
          </div>
        </section>

      </fieldset>

      <fieldset>
        <section>
          <div class="row">
            <%= f.label :user_group_id, '权限组', :class => "label col col-2" %>
            <div class="col col-10">
              <label class="input">
                <%= f.collection_select(:user_group_id,  @user_groups, :id, :name, { :prompt   => "选择用户组" }, { :class => ''} ) %>
              </label>
            </div>
          </div>
        </section>



      </fieldset>

      <footer>
        <%= f.submit "提交", :class => "btn btn-primary" %>
        <%= link_to "返回", "javascript:history.back()", :class => "btn btn-default" %>
      </footer>
      <% end %>

      
    </div><!-- end widget content -->

  </div><!-- end widget div -->


</div>
<script type="text/javascript">


</script>
