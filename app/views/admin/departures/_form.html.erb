<div class="jarviswidget jarviswidget-color-blue" id="new_date_and_price_form" data-widget-editbutton="false">

  <header>
    <span class="widget-icon"> <i class="fa fa-sitemap"></i> </span>
    <h2>添加团期</h2>

  </header>


  <div><!-- widget div-->


    <div class="jarviswidget-editbox"><!-- widget edit box --><!-- This area used as dropdown edit box -->


    </div><!-- end widget edit box -->


    <div class="widget-body"><!-- widget content -->
      <%= form_for [:admin, tour, departure], :html => {:role => "form", :id => 'xform', :class => "smart-form"} do |f| %>
      <fieldset>

        <section>
          <div class="row">
            <label class="label col col-2">团队编号</label>
            <div class="col col-10">
              <label class="input"></i>
                <input type="number" value="<%= tour.id %>" readonly=""></input>
              </label>
            </div>
          </div>
        </section>

        <section>
          <div class="row">
            <label class="label col col-2">团队名称</label>
            <div class="col col-10">
              <label class="input"></i>
                <input type="text" value="<%= tour.name %>" readonly=""></input>
              </label>
            </div>
          </div>
        </section>

      </fieldset>

      <fieldset>
        <section>
          <div class="row">
            <%= f.label :date, '出发日期', :class => "label col col-2" %>
            <div class="col col-10">
              <label class="input"><i class="icon-append fa fa-calendar"></i>
                <%= f.date_field :date, placeholder: "例如 2014-01-01" %>
              </label>
            </div>
          </div>
        </section>

        <section>
          <div class="row">
            <%= f.label :number_of_seats, '余位数', :class => "label col col-2" %>
            <div class="col col-10">
              <label class="input">
                <%= f.number_field :number_of_seats, placeholder: "额定收客人数" %>
              </label>
            </div>
          </div>
        </section>

        <section>
          <div class="row">
            <%= f.label :user_group_id, '权限组', :class => "label col col-2" %>
            <div class="col col-10">
              <label class="input">
                <%= f.collection_select(:sale_channel_id,  SaleChannel.all, :id, :name, { :prompt   => "选择渠道" }, { :class => 'form-control'}) %>
              </label>
            </div>
          </div>
        </section>

        <section>
          <div class="row">
            <%= f.label :expire_date, '有效期至', :class => "label col col-2" %>
            <div class="col col-10">
              <label class="input">
                <%= f.date_field :expire_date %>
              </label>
            </div>
          </div>
        </section>

        <section>
          <div class="row">
            <%= f.label :visa_status, '签证状态', :class => "label col col-2" %>
            <div class="col col-10">
              <label class="input"></i>
                <%= f.select :visa_status, 
                "<option value='未送签'>未送签</option>
                <option value='已送签'>已送签</option>
                <option value='正常出签'>正常出签</option>
                <option value='异常出签'>异常出签</option>".html_safe, {}, { class: "form-control" } %>
              </label>
            </div>
          </div>
        </section>

      </fieldset>

      <footer>
        <%= f.submit "提交", :class => "btn btn-primary" %>
        <%= link_to "返回团期列表", "admin#" + admin_tour_departures_path(tour), :class => "btn btn-default" %>
      </footer>
      <% end %>

      
    </div><!-- end widget content -->

  </div><!-- end widget div -->


</div>
<script type="text/javascript">


</script>
