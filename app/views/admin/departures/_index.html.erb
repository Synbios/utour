<div class="jarviswidget jarviswidget-color-blue" id="wid-date_and_prices" data-widget-editbutton="false">

  <header>
    <span class="widget-icon"> <i class="fa fa-sitemap"></i> </span>
    <h2><%= tour.name %>【编号: <%= tour.id %>】的出发日期列表</h2>

  </header>


  <div><!-- widget div-->


    <div class="jarviswidget-editbox"><!-- widget edit box --><!-- This area used as dropdown edit box -->


    </div><!-- end widget edit box -->


    <div class="widget-body"><!-- widget content -->
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>编号</th>
            <th>出发日期</th>
            <th>额定座位数</th>
            <th>创建人</th>
            <th>销售渠道</th>
            <th>价格数</th>
            <th>操作</th>
         </tr>
        </thead>
        <tbody>
          <% tour.departures.each do |departure| %>
          <tr>
            <td><%= departure.id %></td>            
            <td><%= departure.date.strftime("%b %d, %Y")  %></td>
            <td><%= departure.number_of_seats %></td>
            <td><%= departure.account.name %></td>
            <td>
              <%= departure.sale_channel.name %>
            </td>
            <td><%= link_to "现有#{departure.prices.count}个", "/admin#admin/price_admin.html?tour_id=#{tour.id}&departure_id=#{departure.id}" %></td>
            <td><%= link_to "添加价格", "/admin#admin/price_admin.html?tour_id=#{tour.id}&departure_id=#{departure.id}&price_id=new" %></td>
          </tr>          
          <% end %>
        </tbody>
      </table>
      <br/>
      <%= link_to "返回团队列表", "/admin#admin/departure_admin.html", class: "btn btn-warning" %>
      <%= link_to "添加新团期", "/admin#admin/departure_admin.html?tour_id=#{tour.id}&departure_id=new", class: "btn btn-primary" %>


    </div><!-- end widget content -->


  </div><!-- end widget div -->


</div>