<div class="jarviswidget jarviswidget-color-blue" id="wid-date_and_prices" data-widget-editbutton="false">

  <header>
    <span class="widget-icon"> <i class="fa fa-sitemap"></i> </span>
    <h2><%= departure.tour.name %>【编号: <%= departure.tour.id %>】/ <%= departure.date.strftime("%b %d, %Y") %> 出发的价格列表</h2>

  </header>


  <div><!-- widget div-->


    <div class="jarviswidget-editbox"><!-- widget edit box --><!-- This area used as dropdown edit box -->


    </div><!-- end widget edit box -->


    <div class="widget-body"><!-- widget content -->
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>编号</th>
            <th>价格</th>
            <th>客户组</th>
            <th>添加人</th>
         </tr>
        </thead>
        <tbody>
          <% departure.prices.each do |price| %>
          <tr>
            <td><%= price.id %></td>
            <td><%= price.price  %></td>
            <td>
              <% if price.user_group_id.blank? %>
              <em>所有客户可见</em>
              <% else %>
              <%= price.user_group.name %>
              <% end %>
            </td>
            <td><%= price.account.name %></td>
          </tr>          
          <% end %>
        </tbody>
      </table>
      <br/>
      <%= link_to "返回出团日期列表", "/admin#admin/price_admin.html?tour_id=#{departure.tour.id}", class: "btn btn-warning" %>
      <%= link_to "添加新价格", "/admin#admin/price_admin.html?tour_id=#{departure.tour.id}&departure_id=#{departure.id}&price_id=new", class: "btn btn-primary" %>


    </div><!-- end widget content -->


  </div><!-- end widget div -->


</div>