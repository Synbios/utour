<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>编号</th>
      <th>名称</th>
      <th>行程介绍</th>
      <th>单独介绍</th>
      <th>图片预览</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% sites.each do |site| %>
    <tr>
      <td><%= site.id %></td>
      <td><%= site.name %></td>
      <td><%= site.short_des %></td>
      <td><%= site.full_des %></td>
      <td>
        <% images = site.images %>
        <% (0 .. 2).each do |i| %>
        <% break if i >= images.size %>
        <%= image_tag images[i].photo.url(:thumb) %>
        <% end %>
        <%= "还有#{images.size-3}张..." if images.size > 3 %>
      </td>
      <td>
        <%= link_to "修改", "/admin#admin/site_admin.html?id=#{site.id}", class: "btn btn-info" %>
        <%= link_to "删除", admin_site_path(site), method: :delete, class: "btn btn-primary" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>