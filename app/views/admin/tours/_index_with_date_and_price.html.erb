<div class="jarviswidget jarviswidget-color-blue" id="wid-tours" data-widget-editbutton="false">

  <header>
    <span class="widget-icon"> <i class="fa fa-sitemap"></i> </span>
    <h2>线路列表</h2>

  </header>


  <div><!-- widget div-->


    <div class="jarviswidget-editbox"><!-- widget edit box --><!-- This area used as dropdown edit box -->


    </div><!-- end widget edit box -->


    <div class="widget-body"><!-- widget content -->
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>编号</th>
            <th>名称</th>
            <th>时间和价格</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% tours.each do |tour| %>
          <tr>
            <td><%= tour.id %></td>
            <td><%= tour.name %></td>
            <td><%= link_to "/admin#admin/date_and_price_control.html?tour_id=#{tour.id}" do %>现有<%= tour.date_and_prices.count %>个<% end %></td>
            <td><%= link_to "添加", "/admin#admin/date_and_price_control.html?tour_id=#{tour.id}&date_and_price_id=new" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>


    </div><!-- end widget content -->


  </div><!-- end widget div -->


</div>