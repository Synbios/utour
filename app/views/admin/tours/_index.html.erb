<div class="jarviswidget jarviswidget-color-blue" id="wid-tours" data-widget-editbutton="false">

  <header>
    <span class="widget-icon"> <i class="fa fa-sitemap"></i> </span>
    <h2>线路列表</h2>

  </header>


  <div><!-- widget div-->


    <div class="jarviswidget-editbox"><!-- widget edit box --><!-- This area used as dropdown edit box -->


    </div><!-- end widget edit box -->


    <div class="widget-body"><!-- widget content -->
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>编号</th>
            <th>航班</th>
            <th>名称</th>
            <th>标签</th>
            <th>创建人</th>
            <th>销售渠道</th>
            <th>过期时间</th>
            <th>查看</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% tours.each do |tour| %>
          <tr>
            <td><%= tour.id %></td>
            <td><%= tour.flights %></td>
            <td><%= tour.name %></td>
            <td><%= tour.tour_type %></td>
            <td><%= tour.account.name %></td>
            <td><%= tour.sale_channel.name %><%#= UserGroup.convert_id_string_to_name_string(tour.tour_group) %></td>
            <td>
              <%= tour.expire_date.strftime("%b %d, %Y") %>
              <%= " <em>已过期</em>".html_safe if tour.expire_date < Time.now %>
            </td>
            <td>
              <%= link_to "手机", tour_path(tour), :target => "_blank" %>
              <%= link_to "PDF", tour_path(tour, :format => :pdf), :target => "_blank" %>
              <%= link_to "Word", tour_path(tour), :format => :docx, :target => "_blank" %>
            </td>
            <td>
              <a href="/admin#admin/edit_tour.html?id=<%= tour.id %>">修改</a>
              <%= link_to "删除", admin_tour_path(tour), :method => :delete %></td>
          </tr>
          <% end %>
        </tbody>
      </table>


    </div><!-- end widget content -->


  </div><!-- end widget div -->


</div>