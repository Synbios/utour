<div class="jarviswidget jarviswidget-color-blue" id="wid-tours" data-widget-editbutton="false">

  <header>
    <span class="widget-icon"> <i class="fa fa-sitemap"></i> </span>
    <h2>线路列表</h2>

  </header>


  <div><!-- widget div-->


    <div class="jarviswidget-editbox"><!-- widget edit box --><!-- This area used as dropdown edit box -->


    </div><!-- end widget edit box -->


    <div class="widget-body"><!-- widget content -->
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>编号</th>
            <th>名称</th>
            <th>创建人</th>
            <th>用户组</th>
            <th>标签</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% tours.each do |tour| %>
          <tr>
            <td><%= tour.id %></td>
            <td><%= tour.name %></td>
            <td><%= Account.find_by_id(tour.account_id).name %></td>
            <td><%= UserGroup.convert_id_string_to_name_string(tour.tour_group) %></td>
            <td><%= tour.tour_type %></td>
            <td><a href="/admin#admin/edit_tour.html?id=<%= tour.id %>">修改</a> <%= link_to "删除", admin_tour_path(tour), :method => :delete %></td>
          </tr>
          <% end %>
        </tbody>
      </table>


    </div><!-- end widget content -->


  </div><!-- end widget div -->


</div>