<%= form_for booking, :html => {:role => "form", :class => "form-horizontal"} do |f| %>

<div class="form-group" style="display: none">
  <%= f.label :price_id, '订单编号', :class => "col-xs-3 col-sm-3 control-label" %>
  
  <div class="col-xs-9 col-sm-8">
    <%= f.text_field :price_id, :class => "form-control", :readonly => true %>
    <% if booking.present? && booking.errors[:price_id] %>
    <% booking.errors[:price_id].each do |msg| %>
    <%= render inline: "<span class=\"inline_error_message\">#{msg}</span><br/>" %>
    <% end %>
    <% end %>
  </div>
</div>

<% if sales.size > 0 %>
<div class="form-group">
  <%= f.label :sale_id, '对口销售', :class => "col-xs-3 col-sm-3 control-label" %>
  
  <div class="col-xs-9 col-sm-8">
    <%= f.collection_select(:sale_id,  sales, :id, :name, {}, { :class => 'form-control'}) %>
    <% if booking.present? && booking.errors[:sale_id] %>
    <% booking.errors[:sale_id].each do |msg| %>
    <%= render inline: "<span class=\"inline_error_message\">#{msg}</span><br/>" %>
    <% end %>
    <% end %>
  </div>
</div>
<% end %>


<div class="form-group">
  <%= f.label :number_of_adults, '成人数', :class => "col-xs-3 col-sm-3 control-label" %>
  
  <div class="col-xs-9 col-sm-8">
    <%= f.number_field :number_of_adults, :class => "form-control" %>
    <% if booking.present? && booking.errors[:number_of_adults] %>
    <% booking.errors[:number_of_adults].each do |msg| %>
    <%= render inline: "<span class=\"inline_error_message\">#{msg}</span><br/>" %>
    <% end %>
    <% end %>
    <!-- <span class="cal">小计0元</span> -->
  </div>
</div>

<div class="form-group">
  <%= f.label :number_of_children, '儿童数', :class => "col-xs-3 col-sm-3 control-label" %>
  
  <div class="col-xs-9 col-sm-8">
    <%= f.number_field :number_of_children, :class => "form-control" %>
    <% if booking.present? && booking.errors[:number_of_children] %>
    <% booking.errors[:number_of_children].each do |msg| %>
    <%= render inline: "<span class=\"inline_error_message\">#{msg}</span><br/>" %>
    <% end %>
    <% end %>
  </div>
</div>

<div class="form-group">
  <%= f.label :comment, '备注', :class => "col-xs-3 col-sm-3 control-label" %>
  
  <div class="col-xs-9 col-sm-8">
    <%= f.text_area :comment, :class => "form-control", rows: 5, placeholder: "可注明住宿等注意事项" %>
    <% if booking.present? && booking.errors[:comment] %>
    <% booking.errors[:comment].each do |msg| %>
    <%= render inline: "<span class=\"inline_error_message\">#{msg}</span><br/>" %>
    <% end %>
    <% end %>
  </div>
</div>


<div class="form-group">
  <div class="col-xs-9 col-xs-offset-3 col-sm-8 col-sm-offset-3">
    <%= f.submit "提交订单", :class => "btn btn-default btn-success full_width" %>
  </div>
</div>

<% end %>
