<h1>Listing accounts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Mobile</th>
      <th>Email</th>
      <th>Gender</th>
      <th>Wechat</th>
      <th>User group</th>
      <th>Encrypted password</th>
      <th>Salt</th>
      <th>Memory token</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.name %></td>
        <td><%= account.mobile %></td>
        <td><%= account.email %></td>
        <td><%= account.gender %></td>
        <td><%= account.wechat_id %></td>
        <td><%= account.user_group %></td>
        <td><%= account.encrypted_password %></td>
        <td><%= account.salt %></td>
        <td><%= account.memory_token %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

