  <%#= f.check_box :is_trade %>
  <%#= f.label :is_trade, '我是旅行社同业(门店，二级经销商等)' %> <p>注意: 同业注册在本公司验证前不能报名！</p>
</div> -->

<div class="form-group">
  <%= f.label :password, '密码' %>
  <% if @account.present? && @account.errors[:password] %>
  <% @account.errors[:password].each do |msg| %>
  <%= render inline: "<span class=\"inline_error_message\">#{msg}</span><br/>" %>
  <% end %>
  <% end %>
  <%= f.password_field :password, :class => "form-control", :placeholder => "至少6位" %>
</div>

<div class="form-group">
  <%= f.label :password_confirmation, '确认密码' %>
  <% if @account.present? && @account.errors[:password_confirmation] %>
  <% @account.errors[:password_confirmation].each do |msg| %>
  <%= render inline: "<span class=\"inline_error_message\">#{msg}</span><br/>" %>
  <% end %>
  <% end %>
  <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "重复密码" %>
</div>

<div class="form-group">
  <%= f.submit "注册", :class => "btn btn-default btn-success full_width" %>
</div>
<% end %>
