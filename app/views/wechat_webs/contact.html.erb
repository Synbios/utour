<% content_for :left_links do %>
<% render "left_links" %>
<% end %>

<div class="container lion">
	<div id="contact">
		<h3 style="text-align: center">联系我们</h3>
		<br />

		<% if @message.present? %>
		<div class="alert alert-success">
			<%= @message %>
		</div>
		<% end %>

		<%= form_for :contact, url: lion_feedback_path, :html => {:role => "form"} do |f| %>
		<form role="form">
			<div class="form-group">
				<label for="name">您的姓名</label>
				<input type="text" class="form-control" id="name" placeholder="请输入您的姓名" <%= "value=#{@account.name}" if @account.present? %> name="name">
			</div>
			<div class="form-group">
				<label for="contact">您的电话或邮箱</label>
				<input type="text" class="form-control" id="contact" placeholder="请输入您最方便的联系方式" <%= "value=#{@account.mobile}" if @account.present? %> name="contact">
			</div>

			<div class="form-group">
				<label for="content">咨询内容</label>
				<textarea rows="5" id="content" class="form-control" placeholder="请输入您咨询的内容" name="content" ></textarea>
			</div>
			
			<button type="submit" class="btn btn-default">提交</button>
			<%= link_to "返回首页", root_url, class: "btn btn-default btn-primary" %>
		<% end %>
	</div>
</div>