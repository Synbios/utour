<% content_for :javascripts do %>
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
<% end %>

<% content_for :nav_bar do %>
<%= render "layouts/lion_nav" %>
<% end %>

<% content_for :left_links do %>
<% render "left_links" %>
<% end %>

<% content_for :right_sidebar do %>
<%= render "layouts/lion_sidebar_right" %>
<% end %>

<div class="inner-page">
  <div class="container">

    <div class="page-mainbar landing">

      <div class="landing-content">

        <div class="landing-logo">

          <%= image_tag "logoabout.png", style: "width: 160px; margin: 10px auto" %>
        </div>
      </div>
    </div>

    <div class="page-mainbar faq">
      <h3>旅游攻略</h3>
      <div class="faq-content">

        <div class="panel-group">
          <div class="panel panel-default">
            <div class="panel-heading br-yellow">
              <h4 class="panel-title">
                <%= link_to Image.where("image_type = ?", "亚洲DM").first do %>           
                  <h5 style="color: #fff"><i class="fa fa-angle-right"></i>&nbsp; 亚洲DM</h5>
                <% end %>
              </h4>
            </div>
          </div>

          <div class="panel panel-default">
            <div class="panel-heading br-pink">
              <h4 class="panel-title">                
                <%= link_to Image.where("image_type = ?", "欧洲DM").first do %>           
                  <h5 style="color: #fff"><i class="fa fa-angle-right"></i>&nbsp; 欧洲DM</h5>
                <% end %>
              </h4>
            </div>
          </div>


     
        </div>
      </div>
    </div>
  </div>
</div>